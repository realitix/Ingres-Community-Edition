# Tell Jamdefs that this include worked:
JAMDEFS_INCLUDED = true ;

VERS    = "i64_vms" ;
AS	= macro ;
ASMACH  =  ;
CC 	?= "cc" ;
CCDEBUG = "/DEBUG" ;
CCMACH  ?= "/NOWARN" ;
CCVERSFLAG = "/DEFINE=(I64_VMS)" ;

EXESFX  = exe ;

OPTIM   ?= "/OPTIM" ;
IIOPTIM ?= "/OPTIM" ;
NOOPTIM ?= "/NOOPTIM" ;

CXX	= "cxx" ;
CCLDFLAGS ?= "/NOSYSSHR" ;
AWK	= gawk ;
LEX	= flex ;
#
# for readme.html 
#
platform_string = "HP OpenVMS Itanium" ;
extension_string = $(config_string) ;
