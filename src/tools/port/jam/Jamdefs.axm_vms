# Tell Jamdefs that this include worked:
JAMDEFS_INCLUDED = true ;

VERS    = "axm_vms" ;
AS	= macro ;
ASMACH  = /ALPHA ;
CC 	?= "cc" ;
CCDEBUG = "/DEBUG" ;
CCMACH  ?= "/FLOAT=IEEE /NOWARN" ;
CCVERSFLAG = "/DEFINE=(AXM_VMS)" ;
EXESFX  = exe ;
OPTIM 	?= "/OPTIM" ;
IIOPTIM ?= "/OPTIM" ;
NOOPTIM ?= "/NOOPTIM" ;
CXX	= "cxx" ;
CCLDFLAGS ?= "/NOSYSSHR" ;
AWK	= gawk ;
LEX	= flex ;
#
# for readme.html 
#
platform_string = "HP OpenVMS Alpha" ;
extension_string = $(config_string) ;
