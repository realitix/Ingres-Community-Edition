IISUBSYS back dmf specials_unix ;

# Do this early since svr-ar-library needs it.
if $(BUILD_IVW)
{
    IIBULKCOPY $(INGLIB) : [ FDirName $(X100_PREFIX) lib libx100client.a ] ;
}

if $(SVR_SHLIBS)
{
    IISVRSHLIBRARY $(SHADFLIB) ;
    IINEEDLIBS $(SHADFLIB) : ADFLIB ;

    IISVRSHLIBRARY $(SHBECOMPATLIB) ;
    IINEEDLIBS $(SHBECOMPATLIB) : COMPATLIB ;

    IISVRSHLIBRARY $(SHDMFLIB) ;
    IINEEDLIBS $(SHDMFLIB) : DMFLIB ;

    IISVRSHLIBRARY $(SHSCFLIB) ;
    IINEEDLIBS $(SHSCFLIB) : SCFLIB ;

    IISVRSHLIBRARY $(SHQEFLIB) ;
    IINEEDLIBS $(SHQEFLIB) : QEFLIB ;

    IISVRSHLIBRARY $(SHPSFLIB) ;
    IINEEDLIBS $(SHPSFLIB) : PSFLIB ;

    IISVRSHLIBRARY $(SHOPFLIB) ;
    IINEEDLIBS $(SHOPFLIB) : OPFLIB ;

    IISVRSHLIBRARY $(SHRDFLIB) ;
    IINEEDLIBS $(SHRDFLIB) : RDFLIB ;

    IISVRSHLIBRARY $(SHQSFLIB) ;
    IINEEDLIBS $(SHQSFLIB) : QSFLIB ;

    IISVRSHLIBRARY $(SHTPFLIB) ;
    IINEEDLIBS $(SHTPFLIB) : TPFLIB ;

    IISVRSHLIBRARY $(SHRQFLIB) ;
    IINEEDLIBS $(SHRQFLIB) : RQFLIB ;

    IISVRSHLIBRARY $(SHGCFLIB) ;
    IINEEDLIBS $(SHGCFLIB) : GCFLIB ;

    IISVRSHLIBRARY $(SHGWFLIB) ;
    IINEEDLIBS $(SHGWFLIB) : GWFLIB ;

    IISVRSHLIBRARY $(SHSXFLIB) ;
    IINEEDLIBS $(SHSXFLIB) : SXFLIB ;

    IISVRSHLIBRARY $(SHCUFLIB) ;
    IINEEDLIBS $(SHCUFLIB) : CUFLIB ;

    IISVRSHLIBRARY $(SHDBUTILLIB) ;
    IINEEDLIBS $(SHDBUTILLIB) : DBUTILLIB ;

    IISVRSHLIBRARY $(SHULFLIB) ;
    IINEEDLIBS $(SHULFLIB) : ULFLIB ;
}
else if $(SVR_ARLIB)
{
    IISvrArLibrary ARMERGELIB ;
}

if $(BUILD_IVW)
{
    IIBULKCOPY $(INGBIN) : [ FDirName $(X100_PREFIX) bin x100_server ] ;
    IIBULKCOPY $(INGBIN) : [ FDirName $(X100_PREFIX) bin x100_execute ] ;
    IIBULKCOPY $(INGBIN) : [ FDirName $(X100_PREFIX) bin x100_client ] ;
    IIBULKCOPY $(INGBIN) : [ FDirName $(X100_PREFIX) bin iivwstats ] ;
    IIBULKCOPY $(INGBIN) : [ FDirName $(X100_PREFIX) bin iivwfastload ] ;
    IIBULKCOPY $(INGBIN) : [ FDirName $(X100_PREFIX) bin iivwinfo ] ;
    IIBULKCOPY $(INGLIB) : [ FDirName $(X100_PREFIX) lib libx100client.$(X100SLSFX) ] ;
    IIBULKCOPY $(INGLIB) : [ FDirName $(X100_PREFIX) lib libx100.$(X100SLSFX) ] ;
    IIBULKCOPY $(INGFILES) : [ FDirName $(X100_PREFIX) etc vwlog.conf ] ;
    IIFILE vectorwise.conf_TMPL : [ FDirName $(X100_PREFIX) etc vectorwise.conf ] ;
}


