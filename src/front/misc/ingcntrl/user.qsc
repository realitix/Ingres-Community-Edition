    i4     u_audit=0;
    STATUS      stat;

##  GETFORM Usrform ( u_name = #name, u_group = #default_group,
##                      u_profile=#profile_name, 
##                      u_exp_date=#expire_date)

    if (usr_chg_chk())
	return FAIL;
 
    if (usr_mod_chk())
	return FAIL;

    STtrmwhite(u_profile);
    if(u_profile[0]!=EOS && profile_exist_chk(u_profile)!=OK)
    {
	/*
