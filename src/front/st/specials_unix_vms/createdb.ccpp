PART   createdb

/*
** ingres!bin
*/
   BUILD_DIR (ING_BUILD)!bin
#ifdef conf_LSB_BUILD
	DIRECTORY usr!bin
      SCRIPT ingcreatedb
	DIRECTORY usr!libexec!ingres!bin
#else
	DIRECTORY ingres!bin
#endif
      EXECUTABLE createdb

/*
** ingres!debug
*/
# ifdef VMS
   DIRECTORY ingres!debug
   BUILD_DIR (ING_BUILD)!debug
      FILE createdb.stb
# endif /* VMS */
