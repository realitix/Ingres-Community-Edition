PART  rep
    capability CI_REPLICATOR

/*
** ingres!bin
*/

#ifdef conf_LSB_BUILD
	DIRECTORY usr!bin
#else
	DIRECTORY ingres!bin
#endif
   BUILD_DIR (ING_BUILD)!bin
      EXECUTABLE repmgr
      EXECUTABLE rsstatd
      EXECUTABLE repcat
      EXECUTABLE repmod
      EXECUTABLE repcfg
      EXECUTABLE arcclean
      EXECUTABLE dereplic
      EXECUTABLE reconcil
      EXECUTABLE repdbcfg
      EXECUTABLE convrep
      SCRIPT rpgensql
      SCRIPT rpserver
# ifdef VMS
      SCRIPT rpsrvr
# endif
      EXECUTABLE ddgenrul
      EXECUTABLE ddgensup
      EXECUTABLE ddmovcfg
#ifdef conf_LSB_BUILD
	DIRECTORY usr!libexec!ingres!bin
#endif
      EXECUTABLE repserv

/*
** ingres!utility
*/

#ifdef conf_LSB_BUILD
	DIRECTORY usr!libexec!ingres!utility
#else
	DIRECTORY ingres!utility
#endif
   BUILD_DIR (ING_BUILD)!utility
      SCRIPT SETUP iisurep

