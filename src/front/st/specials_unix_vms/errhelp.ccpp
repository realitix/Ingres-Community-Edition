/*
** Default directory: ingres/sig/errhelp
*/

PART   errhelp

   BUILD_DIR (ING_BUILD)!sig!errhelp
# ifdef conf_LSB_BUILD
   DIRECTORY usr!libexec!ingres!sig!errhelp
# else
   DIRECTORY ingres!sig!errhelp
# endif
      EXECUTABLE errhelp
      FILE faccode.txt
# ifdef VMS
      FILE read.me
      SCRIPT symboldef
# else  /* VMS */
      SCRIPT cvtnum
      FILE read.me
# endif /* VMS */
