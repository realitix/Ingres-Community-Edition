/*
** Default directory: ingres/bin
*/

PART   formtools
   capability CI_VIFRED

   BUILD_DIR (ING_BUILD)!bin
#ifdef conf_LSB_BUILD
	DIRECTORY usr!bin
#else
	DIRECTORY ingres!bin
#endif
      EXECUTABLE compform
      EXECUTABLE copyform
      EXECUTABLE printform

# ifdef VMS
   BUILD_DIR (ING_BUILD)!debug
   DIRECTORY ingres!debug
      FILE compform.stb
      FILE copyform.stb
      FILE printform.stb
# endif /* VMS */
