PART   dbsupport

/*
** ingres!bin 
*/

#ifdef conf_LSB_BUILD
	DIRECTORY usr!bin
#else
	DIRECTORY ingres!bin
#endif
   BUILD_DIR (ING_BUILD)!bin
      SCRIPT adbtofst
      EXECUTABLE blobstor
      EXECUTABLE destroydb
      EXECUTABLE sysmod
      EXECUTABLE usermod
      EXECUTABLE verifydb
      EXECUTABLE optimizedb
      EXECUTABLE statdump
# ifdef R_EMBEDDED
      EXECUTABLE loadmdb
# endif
# ifndef VMS
      SCRIPT alterdb
      SCRIPT auditdb
      SCRIPT ckpdb
      SCRIPT infodb
      SCRIPT fastload
      SCRIPT relocatedb 
      SCRIPT rollforwarddb
# ifdef conf_LSB_BUILD
   DIRECTORY usr!libexec!ingres!bin
# endif
      SCRIPT cktmpl_wrap
# endif /* VMS */
      EXECUTABLE modifyfe


/*
** ingres!files
*/

#ifdef conf_LSB_BUILD
	DIRECTORY usr!share!ingres!files
#else
	DIRECTORY ingres!files
#endif
   BUILD_DIR (ING_BUILD)!files
      FILE cktmpl.def
         CUSTOM
# ifndef VMS
      FILE cktmpl_cpio.def
         CUSTOM
# ifdef UNIX
      FILE cktmpl_wrap.tpl
         CUSTOM
# endif /* UNIX */
# ifdef LNX
      FILE cktmpl_ocfs.def
         CUSTOM
# endif /* LNX */
# endif /*not VMS*/

# ifdef VMS
/*
** ingres!files!checkpoint
*/

#ifdef conf_LSB_BUILD
	DIRECTORY usr!share!ingres!files!checkpoint
#else
	DIRECTORY ingres!files!checkpoint
#endif
   BUILD_DIR (ING_BUILD)!files!checkpoint
   {
   PERMISSION s:rwd,o:rwd,g:re,w:re 
      SCRIPT ckp_tape_setup
      SCRIPT ckp_to_disk
      SCRIPT ckp_to_tape
      SCRIPT rollfwd_delete_files
      SCRIPT rollfwd_delete_tables
      SCRIPT rollfwd_from_disk
      SCRIPT rollfwd_from_tape
      SCRIPT rollfwd_tape_setup
   }

/*
** ingres!debug
*/
   DIRECTORY ingres!debug
   BUILD_DIR (ING_BUILD)!debug
      FILE destroydb.stb
      FILE sysmod.stb
      FILE usermod.stb
      FILE verifydb.stb
      FILE optimizedb.stb
      FILE statdump.stb
     FILE modifyfe.stb
# ifdef R_EMBEDDED
     FILE loadmdb.stb
# endif
# endif /* VMS */
