PART   copydb-unloaddb

/*
** ingres!bin
*/

#ifdef conf_LSB_BUILD
	DIRECTORY usr!bin
#else
	DIRECTORY ingres!bin
#endif
   BUILD_DIR (ING_BUILD)!bin
      EXECUTABLE copydb
      EXECUTABLE unloaddb
# ifdef R_XERCES
      EXECUTABLE convtouni
      EXECUTABLE genxml
      EXECUTABLE impxml
      EXECUTABLE xmlimport
# endif

/*
** ingres!utility
*/

#ifdef conf_LSB_BUILD
	DIRECTORY usr!bin
#else
	DIRECTORY ingres!utility
#endif
   BUILD_DIR (ING_BUILD)!utility
   SCRIPT iiunloadfix

/*
** ingres!files
*/

#ifdef conf_LSB_BUILD
	DIRECTORY usr!share!ingres!files
#else
	DIRECTORY ingres!files
#endif
   BUILD_DIR (ING_BUILD)!files
      FILE iiud.scr
      FILE iiud64.scr
      FILE iiud65.scr
# ifdef R_XERCES
      FILE ingres.dtd
# endif

# ifdef VMS
/*
** ingres!debug
*/
   BUILD_DIR (ING_BUILD)!debug
   DIRECTORY ingres!debug
      FILE copydb.stb
      FILE unloaddb.stb
# ifdef R_XERCES
      FILE convtouni.stb
      FILE genxml.stb
      FILE impxml.stb
      FILE xmlimport.stb
# endif
# endif /* VMS */
