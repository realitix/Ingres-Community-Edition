PART  uadtsup

/*
** ingres!{lib,library} 
*/

#ifdef conf_LSB_BUILD
	DIRECTORY usr!LIB_TGT!ingres
#else
	DIRECTORY ingres!LIB_TGT
#endif
   BUILD_DIR (ING_BUILD)!LIB_BLD
# ifdef VMS
      SCRIPT ii_useradt_build
      SCRIPT ii_alladt_build
      FILE iiclsadt.obj
      FILE iiuseradt.obj
# else /* VMS */
      FILE iiuseradt.o
      FILE iiclsadt.o
# endif /* VMS */

/*
** ingres!utility
*/

   DIRECTORY ingres!utility
# if ! defined(conf_SVR_SHL) && ! defined(VMS)
   BUILD_DIR (ING_BUILD)!utility
      SCRIPT iilink
# endif /* VMS */
